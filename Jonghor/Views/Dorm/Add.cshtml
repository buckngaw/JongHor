<!DOCTYPE html>
@{
    Layout = "~/views/shared/_layout.cshtml";
}
<html>
<style>
    h1 {
        text-align: center;
        font-size: 30px;
        color: Orange;
        font-weight: bold;
    }

    h2 {
        color: black;
        font-weight: bold;
        font-size: 20px;
    }

    .photo_1 {
        margin: auto;
        width: 50% 500px;
        height: 50% 500px;
    }

    .b {
        background-color: #FF8000;
        color: white;
        padding: 10px;
        margin: 10px 20px;
        border: none;
        cursor: pointer;
        width: auto;
    }

    .input1 {
        width: 50%;
        padding: 0;
        margin: 20px 0;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }
</style>
<article>

    <Body>
        <h1>
            Add Dorm
        </h1>

        <div>
            <h2>
                <form action="/Dorm/Add" method="post">
                    Dorm name:<input class="input1" type="text" name="Name" required> <br></br>
                    Description:<input type="text" name="information"></br></br>
                    Price per month:<input type="text" name="BahtPerMonth">Bath/month</br></br>
                    Price per day:<input type="text" name="BahtPerDay">Bath/day</br></br>
                    Bail:<input type="text" name="Deposit">Bath<br></br>
                    Electric's cost/Month:<input type="text" name="E_Per_Unit">Bath/Unit</br></br>
                    Water's cost/Month:<input type="text" name="W_Per_Unit">Bath/Unit</br></br>
                    Internet cost:<input type="text" name="Internet"> </br></br>
                    Line:<input type="text" name="Internet" > </br></br>
                    Facebook:<input type="text" name="Internet" > </br></br>
                    Instagram:<input type="text" name="Internet" > </br></br>
                    <label>URL of Dorm's Picture</label></br>
                    url:<input class="input_url" type="text" name="url_picture"></br>
                    

                    Add Room:</br>
                    How many room per floor:<input type="text" name="roomcount"></br>
                    How many floor:<input type="text" name="floorcount"></br>

                    <button class="b" type="submit">Submit</button>
                </form>
            </h2>
        </div>




    </Body>

</article>
</html>