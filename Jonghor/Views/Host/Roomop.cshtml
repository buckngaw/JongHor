<!DOCTYPE html>
@using Jonghor.ViewModel
@model RoomListViewModel
<html>
<style>
    h1 {
        text-align: center;
        font-size: 30px;
        color: Orange;
        font-weight: bold;
    }

    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 90%;
        padding: 50px;
    }

    td, th {
        border: 2px solid #dddddd;
        text-align: left;
        padding: 20px;
    }


    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<article>

    <center><h1>Add RoomOption</h1></center>

    <center>
        <table>
            <tr>
                <th width="10px"><center>Room Number</center></th>
                <th>Name</th>
                <th>Status</th>
            </tr>
            @foreach (RoomViewModel item in Model.Rooms)
            {
                <tr>
                    <td>@item.RoomNo</td>
                    <td>
                        @foreach (string name in item.PeopleNames)
                        {

                            @name <br />

                        }
                    </td>
                    <td>@item.Status</td>
                   
                </tr>
            }


        </table>
    </center>


</article>
</html>





